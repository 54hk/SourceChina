<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/head_item_listener"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/head_boolean_yz"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="20dp"
            />

        <ImageView
            android:id="@+id/head_boolean_t"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="5dp"
            />


        <TextView

            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/background_dark"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/head_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/darker_gray"
        />



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/head_auther_or_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/head_pinlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:textStyle="italic"
            android:textSize="10dp"
            android:layout_marginLeft="2dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_comment"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/head_pinlun"

            />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        >
    </LinearLayout>

</LinearLayout>