<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tweet_detils_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/tweet_detils_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tweet_detils_img"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="ksdjs "
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tweet_detils_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_detils_title"
        android:layout_toRightOf="@+id/tweet_detils_img"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="skdjskd "
        />

    <LinearLayout
        android:layout_below="@+id/tweet_detils_img"
        android:orientation="horizontal"
        android:id="@+id/lins"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tweet_detils_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    
    <android.support.design.widget.TabLayout
        android:id="@+id/tweet_detils_tab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/lins"
        android:layout_marginTop="10dp"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/tweet_detils_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tweet_detils_tab"
        >
    </android.support.v4.view.ViewPager>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="没有更多数据"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/tweet_detils_vp"
    />

    
</RelativeLayout>