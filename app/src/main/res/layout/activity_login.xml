<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    >

<ImageView
    android:id="@+id/web_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/btn_back_normal"
    android:layout_margin="20dp"
    />

    <ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/logo_osc"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="40dp"
        android:id="@+id/login_title" />

    <EditText
        android:id="@+id/phone_or_emial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
        android:text="15010460727"
    android:background="@drawable/login_select"
        android:hint="手机号或邮箱"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:drawableLeft="@mipmap/ic_singup_mobile"
    />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="h1530364191"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_select"
        android:hint="密码"
        android:textColor="#ffffff"
        android:drawableLeft="@mipmap/ic_login_password"
        android:textColorHint="#ffffff"
        android:id="@+id/password" />

    <TextView
        android:id="@+id/login_forget_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:textSize="20dp"
        android:text="忘记密码？"
        android:textColor="@drawable/drawablegreen"
       android:layout_margin="30dp"
        android:gravity="right"
        />

    <Button
        android:id="@+id/login_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_btn"
        android:text="登录"
        android:textSize="18dp"
        android:textColor="#10e666"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_register"
        android:text="注册"
android:id="@+id/rece_in"
        android:textSize="18dp"
        android:textColor="#fff"
        />



</LinearLayout>
